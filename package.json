{
  "private": true,
  "name": "inspect-element",
  "workspaces": [
    "src/browser-action"
  ],
  "version": "1.3.3",
  "engines": {
    "node": ">=12"
  },
  "main": "index.js",
  "repository": "git@github.com:iendeavor/inspect-element.git",
  "author": "Ernest Chang <iendeavor.github.io@gmail.com>",
  "contributors": [
    {
      "name": "ChrisLin",
      "email": "i100308326@gmail.com",
      "url": "https://github.com/ChrisLin1997"
    }
  ],
  "license": "MIT",
  "scripts": {
    "build": "node scripts/build.js",
    "release": "standard-version",
    "test": "jest tests/*",
    "serve": "yarn build --watch",
    "lint": "prettier . --check"
  },
  "standard-version": {
    "scripts": {
      "postbump": "yarn lint --write && yarn build"
    },
    "skip": {
      "changelog": true
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "git diff --exit-code && git diff --staged --exit-code && yarn lint && yarn build && yarn test"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/chrome": "^0.0.128",
    "@types/jest": "^26.0.19",
    "@types/puppeteer": "^5.4.2",
    "cross-zip": "^4.0.0",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "puppeteer": "^5.5.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.36.1",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "standard-version": "^9.1.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  }
}
